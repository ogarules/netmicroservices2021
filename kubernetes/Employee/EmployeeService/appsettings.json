{
    "$schema": "https://steeltoe.io/schema/latest/schema.json",
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "Spring": {
        "Application": {
            "Name": "employee"
        },
        "Cloud": {
            "Kubernetes": {
                "Name": "employee",
                "Enabled": true
            }
        }
    },
    "Management": {
        "Endpoints": {
            "Health": {
                "ShowDetails": "Always"
            },
            "Info": {
                "ShowDetails": "Always"
            },
            "Metrics": {
                "ShowDetails": "Always"
            }
        },
        "tracing": {
            "alwaysSample": true,
            "egressIgnorePattern": "/api/v2/spans|/v2/apps/.*/permissions|/eureka/.*|/oauth/.*",
            "useShortTraceIds ": true,
            "Exporter": {
                "zipkin": {
                    "endpoint": "http://localhost:9411/api/v2/spans",
                    "validateCertificates": false,
                    "useShortTraceIds ": true
                }
            }
        }
    },
    "Zipkin": {
        "ServiceName": "employee",
        "Endpoint": "http://localhost:9411/api/v2/spans",
        "UseShortTraceIds": true
    },
    "ConnectionStrings": {
        "DefaultConnectionString": "${HR_BD_CON}"
    },
    "authority": "${HR_OKTA_AUTHORITY}",
    "audience": "${HR_OKTA_AUDIENCE}"
}